generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String  @id @default(cuid())
  email            String  @unique
  name             String?
  password         String
  hashRefreshToken String?
  profile          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider String?
  role     Role

  blog Blog[]

  @@map("user")
}

model Blog {
  id Int @id @default(autoincrement())

  title   String
  content String   @db.VarChar(3000)
  tag     String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  keyword Keyword[]

  @@map("blog")
}

model Keyword {
  id      Int    @id @default(autoincrement())
  keyword String

  blog Blog[]
}

enum Role {
  USER
  ADMIN
}
